<resources>

    <string name="com_facebook_loginview_log_in_button">LOGIN</string>
    <string name="com_facebook_loginview_log_out_button">LOGOUT</string>


    <style name="Base.Theme.ACCC" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="GalaxyZooThemeToolbarDarkOverflow" parent="Theme.AppCompat.NoActionBar">
    <item name="android:textColorPrimary">@color/colorFontWhite</item>
    <item name="actionMenuTextColor">@color/colorFontWhite</item>
    <item name="android:textColorSecondary">@color/colorFontWhite</item>

</style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.ACCC">

        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->

        <item name="colorControlHighlight">@color/colorBackground</item>
        <item name="android:textColorPrimary">@color/colorTitle</item>
        <item name="android:textColorSecondary">@color/colorSubTitle</item>
        <item name="android:textColor">@color/colorPreto</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>

        <!-- Customize your theme here. -->


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorFontWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorFontWhite</item>
        <item name="android:textStyle">bold</item>

    </style>




    <style name="ThemeOverlay.AppCompat.NavTheme">

        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">@color/colorFontWhite</item>

        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">@color/colorHighlight</item>

    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView.ActionBar">
        <!-- Gets rid of the search icon -->
        <item name="searchIcon">@drawable/baseline_search_white_18dp</item>
        <!-- Gets rid of the "underline" in the text -->
        <item name="queryBackground">@color/colorFontWhite</item>
        <!-- Gets rid of the search icon when the SearchView is expanded -->
        <item name="searchHintIcon">@drawable/baseline_search_white_18dp</item>
        <!-- The hint text that appears when the user has not typed anything -->
        <item name="colorControlActivated">@color/colorFontWhite</item>

        <item name="colorControlNormal">@color/colorFontWhite</item>


    </style>

</resources>
